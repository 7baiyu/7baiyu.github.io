---      
import BaseLayout from "@layouts/BaseLayout.astro";      
import MainCard from "@components/MainCard.astro";      
import BaseCard from "@components/BaseCard.astro";      
import NavigationCard from "@components/mdx/NavigationCard.astro";      
import { Icon } from "astro-icon/components";      
---      
      
<BaseLayout title="导航">            
  <MainCard infoIcon="lucide:compass">      
    <div class="space-y-10">      
      <!-- 渗透工具 -->      
      <section>      
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">      
          <Icon name="lucide:code" class="w-6 h-6 text-primary" />      
          <span>渗透工具</span>      
        </h2>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">      
          <NavigationCard      
            name="DNSlog"      
            avatar="http://www.dnslog.cn/banner.png"      
            description="用于渗透测试数据回显问题"      
            url="http://www.dnslog.cn/"      
            category="数据回显"  
            id="DEV001"  
          />    
  
          <NavigationCard      
            name="棱角社区"      
            avatar="https://forum.ywhack.com/images/default/logo.svg"      
            description="多种测试工具合集"      
            url="https://forum.ywhack.com/"      
            category="工具合集"  
            id="DEV002"  
          />      
        </div>      
      </section>    
    
      <!-- 安全社区 -->    
      <section>    
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">    
          <Icon name="lucide:server" class="w-6 h-6 text-primary" />    
          <span>安全社区</span>    
        </h2>    
            
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">    
          <NavigationCard    
            name="吾爱破解"    
            avatar="https://avatar.52pojie.cn/images/noavatar_small.gif"    
            description="包含多种多样的问题讨论和资源共享"    
            url="https://www.52pojie.cn/"    
            category="社区论坛"  
            id="SRV001"  
          />

          <NavigationCard    
            name="看雪"    
            avatar="https://bbs.kanxue.com/plugin/kanxue/img/kanxuelogo.png"    
            description="包括多种安全问题的讨论"    
            url="https://bbs.kanxue.com/"    
            category="安全论坛"  
            id="SRV002"
          />

          <NavigationCard    
            name="freebuf"
            avatar="https://www.freebuf.com/images/logoMax.png"
            description="分析一些安全实战问题"
            url="https://www.freebuf.com/"
            category="经验分享"
            id="SRV003"    
          />

          <NavigationCard    
            name="小迪渗透吧"    
            avatar="http://www.xiaodi8.com/zb_users/upload/2019/12/201912151576406008190696.png"    
            description="小迪个人博客资源与经验分享"  
            url="http://www.xiaodi8.com/"
            category="小迪渗透"  
            id="SRV004"           
           />

        </div>    
      </section>    
    
      <!-- 娱乐资源 -->    
      <section>    
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">    
          <Icon name="lucide:image" class="w-6 h-6 text-primary" />    
          <span>娱乐资源</span>    
        </h2>    
            
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">    
          <NavigationCard    
            name="Wallhaven"    
            avatar="https://picbed.xiaozhangya.xin/picbed/20250726182418838.png"    
            description="高质量壁纸分享社区"    
            url="https://wallhaven.cc/"    
            category="壁纸资源"  
            id="ENT001"  
          /> 
          <NavigationCard    
            name="网盘资源社"    
            avatar="https://img.xiaozhangya.xin/file/Logo/RwkDhIdV.png"    
            description="网盘资源分享平台"    
            url="https://www.wpzysq.com/"    
            category="网盘资源"  
            id="ENT002"  
          /> 
          
          
              
          <NavigationCard    
            name="宝可梦节点"    
            avatar="https://52pokemon.huxx.top/favicon.ico"    
            description="网络代理服务"    
            url="https://52pokemon.huxx.top/login"    
            category="代理服务"  
            id="ENT003"  
          />    
        </div>    
      </section>
      
      <!-- Useful Resources Section -->  
      <section>  
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">  
          <Icon name="lucide:bookmark" class="w-6 h-6 text-primary" />  
          <span>Useful Resources</span>  
        </h2>  
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">  
          <NavigationCard  
            name="Astro"  
            avatar="https://img.xiaozhangya.xin/file/Logo/HXADhsBn.png"  
            description="Astro是一个现代化的静态网站生成器，专注于性能和开发者体验。"  
            url="https://docs.astro.build"  
            category="文档"  
            id="RES001"  
          />  
          <NavigationCard  
            name="Tailwind"  
            avatar="https://img.xiaozhangya.xin/file/Logo/mrp0EiyB.png"  
            description="Tailwind CSS是一个功能类优先的CSS框架，提供了实用的样式类。"  
            url="https://tailwindcss.com/docs"  
            category="文档"  
            id="RES002"  
          />  
          <NavigationCard  
            name="DaisyUI"  
            avatar="https://img.xiaozhangya.xin/file/Logo/WEl6nL3H.svg"  
            description="DaisyUI是一个基于Tailwind CSS的组件库，提供了丰富的UI组件。"  
            url="https://daisyui.com/components/"  
            category="UI 框架"  
            id="RES003"  
          />  
          <NavigationCard  
            name="TypeScript"  
            avatar="https://img.xiaozhangya.xin/file/Logo/FL3XpMDh.png"  
            description="TypeScript是JavaScript的超集，添加了静态类型和其他功能。"  
            url="https://www.typescriptlang.org/docs/handbook/intro.html"  
            category="文档"  
            id="RES004"  
          />  
        </div>  
      </section>
      <div class="divider my-8">
        <Icon name="lucide:heart" class="w-10 h-10 text-primary" />
      </div>
    </div>      
  </MainCard>      
</BaseLayout>